<% layout('layout') -%>
<h1>Files</h1>
<ul>
<% files.forEach(function(file) { %>
  <li>
	<% if(file.dir) { %>
      <a href="/?path=<%= base %>/<%= file.name %>" class="dir"><%= file.name %></a>
	  <a href="/tar/?path=<%= base %>/<%= file.name %>" class="tar">[Tar]</a>
	<% } else { %>
      <a href="/fetch/?path=<%= base %>/<%= file.name %>" class="download"><%= file.name %></a>
	<% } %>
  </li>
<% }) %>
</ul>
